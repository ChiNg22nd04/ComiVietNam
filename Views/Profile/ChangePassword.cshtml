@model DAPM2.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<style>
    /* Change Password Page Styling */

    /* Card Container */
    .card {
        border-radius: 8px;
        margin: 50px auto;
        max-width: 1200px;
        padding: 30px;
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
        background: #fff;
    }
    h3 {
        font-size: 26px;
        color: #333;
        margin-bottom: 20px;
        border-bottom: 2px solid #e1814c;
        padding-bottom: 10px;
    }

    /* Card Header */

    /* Form Group */
    .form-group {
        margin-bottom: 15px;
    }

    /* Form Label */
    .control-label {
        font-size: 1rem;
        font-weight: bold;
        color: #333;
    }

    /* Form Inputs */
    .form-control {
        border-radius: 4px;
        border: 1px solid #ccc;
        padding: 10px;
        font-size: 1rem;
        width: 100%;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    /* Validation Message */
    .text-danger {
        font-size: 0.875rem;
        color: red;
    }

    /* Alert Messages */
    .alert {
        margin-top: 20px;
        padding: 15px;
        font-size: 1rem;
    }

    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }

    /* Button */
    .btn {
        border-radius: 4px;
        padding: 12px 20px;
        font-size: 1rem;
        cursor: pointer;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: white;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    /* ActionLink Styling */
    .card-footer {
        display: flex;
    }
    .card-footer .btn-secondary {
        text-decoration: none;
    }

    /*form*/
    .form-in {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .form-in input {
        width: 80%;
    }
    .btn-submit {
        background-color: #e1814c;
        border: none;
        text-transform: none;
        color: white;
    }
        .btn-submit:hover {
            background-color: #e1814c;
        }
</style>


<div class="container">
    <div class="">
        <div class="">
            <div class="card ">
                <div class="card-header">
                    <h3 class="mb-0">Đổi mật khẩu</h3>
                </div>
                <div>
                    <!-- Hiển thị thông báo nếu có -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <div class="form-in">
                                <span>Nhập lại mật khẩu cũ</span>
                                @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="form-in">
                                <span>Nhập mật khẩu mới</span>
                                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="form-in">
                                <span>Xác nhận lại mật khẩu mới</span>
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group" style="display: flex; justify-content: space-between">
                            <div class="card-footer text-center">
                                @Html.ActionLink("Quay lại", "ProfileUser", null, new { @class = "btn btn-secondary" })
                            </div>
                            <button type="submit" class="btn btn-submit">Lưu thay đổi</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
 