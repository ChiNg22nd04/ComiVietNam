﻿@model DAPM2.Models.HistoryViewModel

@{
    ViewBag.Title = "Lịch sử đọc của bạn";
    Layout = "~/Views/Shared/_HistoryPage.cshtml";
}

<div class="content-container">
    <div class="story-section">
        <h2>Lịch sử đọc</h2>

        @if (Model.Products != null && Model.Products.Count > 0)
        {
            <ul class="story-list">
                @foreach (var story in Model.Products)
                {
                    <li class="story-item">
                        <a href="@Url.Action("Detail", "Detail", new { id = story.ProductID })">
                            <img src="@story.ImageProcductURL" alt="@story.Title" width="100" />
                            <h3>@story.Title</h3>
                        </a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="no-views">Không có lịch sử đọc nào.</p>
        }

        <div class="pagination">
            @if (Model.TotalPages > 1)
            {
                for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <button class="active">@i</button>
                    }
                    else
                    {
                        <a href="@Url.Action("HistoryReading", "History", new { page = i })">
                            <button>@i</button>
                        </a>
                    }
                }
            }
        </div>
    </div>
</div>